{
  "family": "todo-server-task",
  "networkMode": "awsvpc",
  "containerDefinitions": [
    {
      "name": "kaplan-todo-server",
      "image": "${{ secrets.AWS_ACCOUNT_ID }}.dkr.ecr.${{ vars.AWS_REGION }}.amazonaws.com/todo/todo-server:latest",
      "essential": true,
      "memory": 512,
      "cpu": 256,
      "portMappings": [
        {
          "containerPort": 3001,
          "hostPort": 3001
        }
      ],
      "environment": [
        { "name": "API_PORT", "value": "${{ vars.API_PORT }}" },
        { "name": "DB_HOST", "value": "${{ vars.DB_HOST }}" },
        { "name": "DB_USERNAME", "value": "${{ secrets.DB_USERNAME }}" },
        { "name": "DB_PASSWORD", "value": "${{ secrets.DB_PASSWORD }}" },
        { "name": "DB_DATABASE", "value": "${{ secrets.DB_DATABASE }}" },
        { "name": "DB_PORT", "value": "${{ vars.DB_PORT }}" },
        { "name": "AUTH0_AUDIENCE", "value": "${{ secrets.AUTH0_AUDIENCE }}" },
        { "name": "AUTH0_DOMAIN", "value": "${{ secrets.AUTH0_DOMAIN }}" }
      ]
    }
  ],
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::${{ secrets.AWS_ACCOUNT_ID }}:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::${{ secrets.AWS_ACCOUNT_ID }}:role/myEcsTaskRole"
}
